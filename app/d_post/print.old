table {
	width: 100%;
	margin-bottom: 20px;
	border: 1px solid #dddddd;
	border-collapse: collapse; 
}

table th {
	font-weight: bold;
	padding: 5px;
	background: #efefef;
	border: 1px solid #dddddd;

}

table td {
	border: 1px solid #dddddd;
	padding: 5px;
}

table tr { 
        page-break-before: auto;
        page-break-inside:avoid;
        page-break-after: auto
        /* display: inline */ 
      }

thead { display:table-header-group }
tfoot { display:table-footer-group }